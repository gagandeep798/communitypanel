<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ../partials/head %>
</head>


<body class="container-fluid">
    <% if (user.firsttime===0) { %>
    <header>
        <%- include ../partials/header %>
    </header>
    <% } %>
    <div class="row">
        <% if (user.firsttime===0) { %>
        <div class="col-sm-2">
            <%- include ../partials/navbar %>
        </div>
        <% } %>
        <div class="col-sm-10">
            <main>
                <div class="container" style="margin-top: 2%;background-color:whitesmoke;">
                    <div align="center">
                        <p style="padding: 1%;font-size: 34px;">User Details</p>
                    </div>
                    <div class="responsive-login-form allSides" style="height : auto">
                        <div class="col-sm-12">
                            <form method="post" action="/userdetails">
                                <div class="rows col-sm-12" style="border-width: 30px;">
                                    <label>Basic Info</label><br>
                                    <div class="panel panel-info">
                                        <div class="panel-heading">Email</div>
                                        <div class="panel-body">
                                            <%=user.email%>
                                        </div>
                                    </div>
                                    <div class="panel panel-info">
                                        <div class="panel-heading">Role</div>
                                        <div class="panel-body">
                                            <%=user.role%>
                                        </div>
                                    </div>
                                    <div class="form-group col-sm-12" style="margin: 10px">
                                        <label><input type="text" required="" name="name" class="form-control"
                                                placeholder="name"></label><br><br>
                                        <label><input type="text" required="" name="dob" class="form-control"
                                                placeholder="dob"></label>
                                    </div>
                                    <div class="form-group" style="margin: 10px">
                                        <br />
                                        <label>Gender:</label>
                                        <select name="roleoptions" class="form-control">
                                            <optgroup label="Select Gender:">
                                                <option value="Male" id="m">Male</option>
                                                <option value="Female" id="f">Female</option>
                                            </optgroup>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <label>Contact Info</label><br>
                                    <div class="form-group" style="margin: 10px">
                                        <input type="text" name="phone" class="form-control" placeholder="<%=user.phone%>">
                                    </div>
                                    <div class="form-group" style="margin: 10px">
                                        <input type="text" name="city" class="form-control" placeholder="<%=user.city%>">
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <label>Personal Info</label><br>
                                    <div class="form-group" style="margin: 10px">
                                        <input type="text" required="" name="interest" class="form-control" placeholder="Enter interset">
                                    </div>
                                    <div class="form-group" style="margin: 10px">
                                        <input type="text" name="city" class="form-control" placeholder="Anything else.."><br />
                                    </div>
                                </div>
                                <div class="col-sm-8 form-group">
                                    <input class="btn btn-success" type='submit' value='submit' />
                                    <a class="btn btn-danger">Cancel</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
</body>

</html>