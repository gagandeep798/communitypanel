<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ../partials/head %>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

</head>

<body class="container-fluid">
    <header>
        <%- include ../partials/header %>
    </header>
    <div class="row">
        <div class="col-sm-2">
            <%- include ../partials/navbar %>
        </div>
        <div class="col-sm-10">
            <main>
                <table id="example" class="table table-striped table-bordered" style="width:100%">
                </table>

            </main>
        </div>
    </div>
    <footer>
        <%- include ../partials/footer %>
    </footer>
    <script>
        $(document).ready(function () {
            $('#example').DataTable({
                "serverSide": true,
                "ajax": {
                    "url": "/userlist",
                    "type": "POST"
                },
                'columns': [
                    { 'title': 'Usename/Email', 'data': 'name', 'orderable': true, 'searchable': true, 'sClass': 'tableUname' },
                    { 'title': 'Phone', 'data': 'phone', 'orderable': false, 'searchable': false, 'sClass': 'tablePhone' },
                    { 'title': 'City', 'data': 'city', 'orderable': true, 'searchable': true, 'sClass': 'tableCity' }
                ],
            });
        });
    </script>
</body>

</html>