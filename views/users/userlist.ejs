<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ../partials/head %>
</head>

<body class="container-fluid">
    <header>
        <%- include ../partials/header %>
    </header>
    <div class="row">
        <div class="col-sm-2">
            <%- include ../partials/navbar %>
        </div>
        <div class="col-sm-10">
            <main>
                <table id="example" class="table table-striped table-bordered" style="width:100%">
                </table>

            </main>
        </div>
    </div>
    <footer>
        <%- include ../partials/footer %>
    </footer>
    <script>
        $(document).ready(function () {
            $('#example').DataTable({
                "serverSide": true,
                "ajax": {
                    "url": "/ulist",
                    "type": "POST"
                },
                'columns': [
                    { 'title': 'User Id', 'data': '_id', 'orderable': false, 'searchable': false, 'sClass': 'tableId' },
                    { 'title': 'Usename/Email', 'data': 'name', 'orderable': true, 'searchable': true, 'sClass': 'tableUname' },
                    { 'title': 'Phone', 'data': 'phone', 'orderable': false, 'searchable': false, 'sClass': 'tablePhone' },
                    { 'title': 'City', 'data': 'city', 'orderable': true, 'searchable': true, 'sClass': 'tableCity' },
                    { 'title': 'Status', 'data': 'firsttime', 'orderable': true, 'searchable': false, 'sClass': 'tableStatus' },
                    { 'title': 'Role', 'data': 'role', 'orderable': true, 'searchable': false, 'sClass': 'tableRole' },
                    { 'title': 'Active', 'data': 'active', 'orderable': false, 'searchable': false, 'sClass': 'tableActivated' },
                    { 'title': "Actions", 'data': null, 'orderable': true, 'searchable': false, 'sClass': 'tableAction' },
                ],
            });
        });
    </script>
</body>

</html>