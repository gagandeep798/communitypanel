<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ../partials/head %>
</head>

<body class="container-fluid">
    <header>
        <%- include ../partials/header %>
    </header>
    <div class="row">
        <div class="col-sm-2">
            <%- include ../partials/navbar %>
        </div>
        <div class="col-sm-10">
            <main style="height:100%;width:50%;background-color:whitesmoke;">
                <p align="center">
                    <%=msg%>
                </p>
                <div class="responsive-login-form allSides">
                    <div align="center">
                        <p style="padding: 1%;font-size: 34px;">Add User</p>
                    </div>
                    <div class="col-sm-12">
                        <form method="post" action="/admin/adduser">
                            <div class="col-sm-12">
                                <div class="form-group" style="margin: 10px">
                                    <label>Email:</label><br />
                                    <input type="text" required="" name="email" class="form-control" placeholder="email"><br />
                                </div>
                                <div class="form-group" style="margin: 10px">
                                    <label>Phone:</label><br />
                                    <input type="text" required="" name="phone" class="form-control" maxlength='10'
                                        placeholder="phone"><br />
                                </div>
                                <div class="form-group" style="margin: 10px">
                                    <label>City:</label><br />
                                    <input type="text" required="" name="city" class="form-control" placeholder="city"><br />
                                </div>
                                <div class="form-group" style="margin: 10px">
                                    <label>Password:</label><br />
                                    <input type="password" required="" name="password" class="form-control"
                                        autocomplete="off" placeholder="password"><br />
                                </div>
                                <div class="form-group" style="margin: 10px">
                                    <label>Role:</label>
                                    <select name="roleoptions" class="form-control">
                                        <optgroup label="Select Role">
                                            <option value="User">User</option>
                                            <option value="Community Manager">Community Manager</option>
                                            <option value="Admin">Admin</option>
                                        </optgroup>
                                    </select>
                                </div>
                                <br>
                                <input class="btn btn-success" type='submit' value='Submit' />
                                <a class="btn btn-danger" href="/admin/adduser">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </main>
        </div>
    </div>
    <footer>
        <%- include ../partials/footer %>
    </footer>
</body>

</html>