<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ../partials/head %>
</head>

<body class="container-fluid">
    <header>
        <%- include ../partials/header %>
    </header>
    <div class="row">
        <div class="col-sm-2">
            <%- include ../partials/navbar %>
        </div>
        <div class="col-sm-10">
            <%=msg%>
            <main>
                <div class="responsive-login-form allSides col-sm-8" style="height:auto;;background-color:whitesmoke;">
                    <div class="col-sm-12">
                        <div align="center">
                            <p style="padding: 1%;font-size: 34px;">Change Password</p>
                        </div>
                        <form method="post" action="/changepassword">
                            <div class="col-sm-12">
                                <div class="form-group" style="margin: 10px">
                                    <div class="container col-sm-12">
                                        <div class="panel panel-default">
                                            <div class="panel-heading">Email</div>
                                            <div class="panel-body">
                                                <%=user.email%>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group" style="margin: 10px">
                                    <div class="container col-sm-12">
                                        <div class="panel panel-default">
                                            <div class="panel-heading">Old Password</div>
                                            <div class="panel-body">
                                                <input type="password" required="" name="oldpassword" class="form-control"
                                                    placeholder="oldpassword"><br />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group" style="margin: 10px">
                                    <div class="container col-sm-12">
                                        <div class="panel panel-default">
                                            <div class="panel-heading">New Password</div>
                                            <div class="panel-body">
                                                <input type="password" required="" name="newpassword" class="form-control"
                                                    placeholder="newpassword"><br />
                                            </div>
                                        </div>
                                    </div><br />
                                </div>
                                <br>
                            </div>
                            <div class='col-sm-8'>
                                <input class="btn btn-success" type='submit' value='Submit' />
                                <a class="btn btn-danger" href="/changepassword">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </main>
        </div>
    </div>
    <footer>
        <%- include ../partials/footer %>
    </footer>

</body>

</html>