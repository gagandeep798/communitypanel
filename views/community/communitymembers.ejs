<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ../partials/head %>
    <style>
        hr {
            display: block;
            margin-top: 0.5em;
            margin-bottom: 0.5em;
            margin-left: auto;
            margin-right: auto;
            border-style: inset;
            border-width: 3px;
        }

        .col1 {
            float: left;
            width: 25%;
            padding: 10px;
            height: 300px;
        }

        .col2 {
            float: left;
            width: 75%;
            padding: 10px;
            height: 300px;
        }
    </style>
</head>

<body class="container-fluid">
    <header>
        <%- include ../partials/header %>
    </header>
    <div class="rows">
        <div class="col-sm-2" style="margin-left: -1%;">
            <%- include ../partials/navbar %>
        </div>
        <div class="col-sm-10" style="background-color: whitesmoke;height:100;">
            <main style="margin-top:1%;margin-bottom: -1%;">
                <div class="col-sm-12">
                    <div class="row cols-sm-12">
                        <div class="col cols-sm-2"><img src="/images/default.jpg"
                                class=" rounded img-thumbnail float-left" height="150" width="150"></div>
                        <div class='col cols-sm-6' align="left">
                            <p style="font-size: 16px">
                                <h1>
                                    <%=comm.name%>
                                </h1>
                            </p>
                        </div>
                        <div class="container col cols-sm-5">
                            <div class="dropdown">
                                <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                                    Wide
                                </button>
                                <ul class="dropdown-menu dropdown-menu-left">
                                    <li><a href="#">Discussions</a></li>
                                    <li><a href="/communitymembers/manage/role/<%=comm._id%>">Manage Community</a></li>
                                    <li><a href="/communityprofile/<%=comm._id%>">Community Profile</a></li>
                                    <li><a href="/communitymembers/user/<%=comm._id%>">Community Members</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="cols col-sm-12">
                        <div class="container">
                            <ul class="nav nav-tabs">
                                <li class="nav-item">
                                    <a class="nav-link " href="/communitymembers/admin/<%=comm._id%>">Admin
                                        <%=ano%></a>
                                </li>
                                <li class="nav-item"></li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/communitymembers/user/<%=comm._id%>">User
                                        <%=uno%></a>
                                </li>
                            </ul>
                        </div>
                        <div class="cols col-sm-12">
                            <div class="panel panel-default">
                                <div class="panel-body col-sm-12">
                                    <div>
                                        <% if (role=='user') { %>
                                        <% ulists.forEach(function(ulist) { %>
                                        <div class="col-sm-8" align="left">
                                            <img src="/images/default.jpg" class="rounded-circle img-thumbnail"
                                                height="5%" width="5%">
                                            <%=ulist.name%>
                                        </div>
                                        <% if (user.role!='User') { %>
                                        <div class="row col-sm-4" float="right">
                                            <form method="post" action="/cancel/<%=ulist._id %>/<%=comm._id%>">
                                                <div class="dropup col-sm-6">
                                                    <button type="button" class="btn btn-primary dropdown-toggle"
                                                        data-toggle="dropdown">
                                                    </button>
                                                    <div class="dropdown-menu">
                                                        <a class="dropdown-item" href="#">Link 1</a>
                                                        <a class="dropdown-item" href="#">Link 2</a>
                                                    </div>
                                                </div>
                                                <div class="col-sm-6">
                                                    <button type="submit"
                                                        class="btn btn-danger glyphicon glyphicon-remove"><span
                                                            class="badge badge-danger"></span></button>
                                                </div>
                                            </form>
                                        </div>
                                        <% } %>
                                        <br><br>
                                        <% }); %>
                                        <% } %>
                                    </div>
                                    <div>
                                        <% if (role!='user') { %>
                                        <img src="/images/default.jpg" class="rounded-circle img-thumbnail" height="5%"
                                            width="5%">
                                        <%=olist.name%><br>
                                        <% alists.forEach(function(alist) { %>
                                        <img src="/images/default.jpg" class="rounded-circle img-thumbnail" height="5%"
                                            width="5%">
                                        <%=alist.name%>
                                        <br>
                                        <% }); %>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <footer>
            <%- include ../partials/footer %>
        </footer>
</body>

</html>