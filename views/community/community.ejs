<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ../partials/head %>
</head>

<body class="container-fluid">
    <header>
        <%- include ../partials/header %>
    </header>
    <div class="row">
        <div class="col-sm-2">
            <%- include ../partials/navbar %>
        </div>
        <div class="col-sm-10">
            <div style="background-color: whitesmoke;height:100%;">
                <main>
                    <div class="col-sm-12">
                        <div class="rows col-sm-12">
                            <div class="cols col-sm-10"><br>
                                <a href="/home" role='button' class="btn btn-primary">My Community</a>
                                <a href="/searchcommunity" class="btn btn-primary" role='button'>Search</a>
                            </div>
                            <div class="cols col-sm-2" align="right">
                                <% if (user.role!='User') { %>
                                <br>
                                <a href='/createcommunity' role="button" class="btn btn-primary"
                                    style="align-content: left;color: darkred;">Create</a>
                                <br>
                                <% } %>
                            </div>
                        </div>
                        <div class="jumbotron">
                            <br>
                            <% if (owners) { %>
                            <% owners.forEach(function(owner) { %>
                            <div class="container col-sm-12">
                                <div class="panel panel-primary panel-heading col-sm-12">
                                    <div class="col-sm-8">
                                        <img src="/images/default.jpg" class="img-thumbnail" height="50" width="50"
                                            align="left">
                                        <a href="/communityprofile/<%=owner._id%>" id="<%=owner._id%>"
                                            style="color: darkred;font-size: medium;">
                                            <%= owner.name %></a>
                                        <a href="/communityprofile/members/<%=owner._id%>"
                                            style="font-size:small;"><span class="label label-success">Members
                                                <%=owner.user.length%></span></a>
                                    </div>
                                    <div class="col-sm-4" align="right">
                                        <a href="/communityprofile/<%=owner._id%>" class="btn btn-success" role="button"
                                            id="<%= owner._Id%>">Owner</a>
                                    </div>
                                </div>
                            </div>
                            <% }); %>
                            <% } %>
                            <!--                             

                             -->
                            <% if (comms) { %>
                            <% comms.forEach(function(comm) { %>
                            <div class="container col-sm-12">
                                <div class="panel panel-primary panel-heading col-sm-12">
                                    <div class="col-sm-8">
                                        <img src="/images/default.jpg" class="img-thumbnail" height="50" width="50"
                                            align="left">
                                        <a href="/communityprofile/<%=comm._id%>" id="<%=comm._id%>"
                                            style="color: darkred;font-size: medium;">
                                            <%= comm.name %></a>
                                        <a href="/communityprofile/members/<%=comm._id%>" style="font-size:small;"><span
                                                class="label label-success">Members
                                                <%=comm.user.length%></span></a>
                                    </div>
                                </div>
                            </div>
                            <% }); %>
                            <% } %>


                            <% if (invities) { %>
                            <% invities.forEach(function(invitie) { %>
                            <div class="container col-sm-12">
                                <div class="panel panel-primary panel-heading col-sm-12">
                                    <div class="col-sm-8">
                                        <img src="/images/default.jpg" class="img-thumbnail" height="50" width="50"
                                            align="left">
                                        <a href="/communityprofile/<%=invitie._id%>" id="<%=invitie._id%>"
                                            style="color: darkred;font-size: medium;">
                                            <%= invitie.name %></a>
                                        <a href="/communityprofile/members/<%=invitie._id%>"
                                            style="font-size:small;"><span class="label label-success">Members
                                                <%=invitie.user.length%></span></a>
                                        <a style="font-size:small;"><span
                                                class="label label-danger">Invitation</span></a>
                                    </div>
                                </div>
                            </div>
                            <% }); %>
                            <% } %>

                            <% if (pendings) { %>
                            <% pendings.forEach(function(pending) { %>
                            <div class="container col-sm-12">
                                <div class="panel panel-primary panel-heading col-sm-12">
                                    <div class="col-sm-8">
                                        <img src="/images/default.jpg" class="img-thumbnail" height="50" width="50"
                                            align="left">
                                        <a href="/communityprofile/<%=pending._id%>" id="<%=pending._id%>"
                                            style="color: darkred;font-size: medium;">
                                            <%= pending.name %></a>
                                        <a style="font-size:small;"><span class="label label-success">Members
                                                <%=pending.user.length%></span></a>
                                        <a style="font-size:small;"><span class="label label-danger">Pending</span></a>
                                    </div>
                                    <div class="col-sm-4" align="right">
                                        <form method="post" action="/cancelcommunity/<%=pending._id%>">
                                            <input type="submit" class="btn btn-danger" id="<%=pending._id%>"
                                                value="Cancel">
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <% }); %>
                            <% } %>
                        </div>
                    </div>
                </main>
            </div>
        </div>
    </div>
    <footer>
        <%- include ../partials/footer %>
    </footer>

</body>

</html>